{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "next",
      "next/types/global",
      "next/image-types/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@muzo/db": ["../../packages/db/src/index.ts"],
      "@muzo/db/*": ["../../packages/db/src/*"],
      "@muzo/queue": ["../../packages/queue/src/index.ts"],
      "@muzo/queue/*": ["../../packages/queue/src/*"],
      "@muzo/fulfillment": ["../../packages/fulfillment/src/index.ts"],
      "@muzo/fulfillment/*": ["../../packages/fulfillment/src/*"],
      "@muzo/ai": ["../../packages/ai/src/index.ts"],
      "@muzo/ai/*": ["../../packages/ai/src/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}